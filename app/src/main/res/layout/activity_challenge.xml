<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/category_fitness"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:spinnerMode="dialog"
                app:ms_arrowSize="0dp"
                app:ms_hint="@string/category_fitness" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/category_chores"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:spinnerMode="dialog"
                app:ms_arrowSize="0dp"
                app:ms_hint="@string/category_chores" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/category_relax"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:spinnerMode="dialog"
                app:ms_arrowSize="0dp"
                app:ms_hint="@string/category_relax" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/category_default"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:spinnerMode="dialog"
                app:ms_arrowSize="0dp"
                app:ms_hint="@string/category_default" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="profile"
            android:layout_weight="1"
            android:id="@+id/profile_btn_challenge"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="calendar"
            android:layout_weight="1"
            android:id="@+id/calendar_btn_challenge"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home"
            android:layout_weight="1"
            android:id="@+id/home_btn_challenge"/>
    </LinearLayout>
</RelativeLayout>
